<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="3dp">

        <EditText
            android:id="@+id/resultStudentName"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="@string/student_name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:autofillHints=""
            android:inputType="text" />

        <EditText
            android:id="@+id/eng_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:autofillHints="-1"
            android:inputType="number" />

        <EditText
            android:id="@+id/comp_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:autofillHints=""
            android:inputType="number" />

        <EditText
            android:id="@+id/eng_tot_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:autofillHints=""
            android:inputType="number" />

        <EditText
            android:id="@+id/kis_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:autofillHints=""
            android:inputType="number" />

        <EditText
            android:id="@+id/ins_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/kis_tot_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/math_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/sci_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number"
            android:autofillHints="-1" />

        <EditText
            android:id="@+id/sst_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number"
            android:autofillHints="-1" />

        <EditText
            android:id="@+id/cre_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number"
            android:autofillHints="-1" />

        <EditText
            android:id="@+id/sreTot_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number"
            android:autofillHints="-1" />

        <EditText
            android:id="@+id/total_result_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/cell_background"
            android:gravity="center"
            android:hint="@string/_0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:inputType="number"
            android:autofillHints="-1" />

        <Button
            android:id="@+id/save_result_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/submit_button"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="3dp"/>

        <Button
            android:id="@+id/edit_result_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/submit_button"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:visibility="gone"/>
    </LinearLayout>

</HorizontalScrollView>